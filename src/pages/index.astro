---
import Carousel from '../components/Carousel.svelte';
import AuthButtons from '../components/AuthButtons.svelte';

---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>The Secret Theater</title>
    <!-- (Optionally) include your global CSS here -->
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="bg-black text-white">
    <!-- Site Name in Top Left -->
    <header class="absolute top-0 left-0 p-4">
      <h1 class="text-2xl font-bold">The Secret Theater</h1>
    </header>

    <main class="flex flex-col items-center justify-center min-h-screen">
      <!-- Carousel of movies -->
      <Carousel />
      <!-- Log In / Sign Up buttons -->
      <AuthButtons client:load />
    </main>
  </body>
</html>