---
import type { Film } from '../types';
import { Image } from 'astro:assets';

interface Props {
  film: Film;
}

const { film } = Astro.props;
---

<style>
  .card {
    cursor: pointer;
  }
  
</style>

<div class="card w-full max-w-72">
  <figure>
    <Image src={film.posterUrl} alt={`Poster for ${film.title}`} width={200} height={300} loading="eager" class="max-w-72 w-full"/>
  </figure>
  <div class="">
    <div class="relative">
      <!-- <h2 class="text-sm text-center truncate">{film.title}</h2> -->
      <div class="absolute inset-0 top-[-60px] flex items-center justify-center">
        <a href={`/films/${film.id}`} class="bg-black px-4 py-2">
          Watch
        </a>
      </div>
    </div>
    <!-- <h2 class="text-sm text-center truncate ">{film.title}</h2> -->
    <!-- <p>{film.genre}</p>
    <div class="card-actions justify-end">
      <a href={`/films/${film.id}`} class="btn btn-outline">Watch</a>
    </div> -->
  </div> 
</div> 